{% block body %}

<div class="d-flex justify-content-between">
<div class="text-light">Total orders: {{ orders|length }}</div>
<div>
<a class="btn btn-outline-light text-decoration-none" href="{{ path('app_order_add') }}">New Order</a>
</div>
</div>
<table class="table table-striped table-hover table-bordered table-sm border-success mt-5 p-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Company</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">E-mail</th>
      <th scope="col">Value</th>
      <th scope="col">Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for order in orders %}
  {% if orders|length > 0 %}
    <tr>
      <th scope="row"> {{ loop.index }} </th>
      <td>{{ order.id }}</td>
      <td>{{ order.user.profile.companyName }}</td>
      <td>{{ order.user.profile.address }}</td>
      <td>{{ order.user.profile.phone }}</td>
      <td>{{ order.user.email }}</td>
      <td>{{ order.getValue() }}</td>
      <td>{{ order.date|date('Y-m-d') }}</td>
      <td>
        <a class="btn btn-outline-info btn-sm m-1" href="{{ path('app_order_info', {id: order.id}) }}"><i class="fas fa-info-circle"></i></a>
        <a class="btn btn-outline-primary btn-sm m-1" href="{{ path('app_order_edit', {id: order.id}) }}"><i class="fas fa-cog"></i> </a>
        <a class="btn btn-outline-danger btn-sm m-1" href="{{ path('app_order_delete', {id: order.id}) }}"><i class="fas fa-trash"></i><a/>

      </td>
    </tr>
    {% endif %}
    {% endfor %}
  </tbody>
</table>
{% endblock %}