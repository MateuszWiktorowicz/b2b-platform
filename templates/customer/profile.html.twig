{% extends 'admin_panel/base_admin_panel.html.twig' %}

{% block title %}Edit customer profile{% endblock %}
{% block bread %}
 &#8594; Customers &#8594; Edit customer profile
{% endblock %}
{% block content %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div>{{ form_errors(form)}}</div>

<div class="mb-3">
  {{ form_label(form.companyName, 'Please enter the company name', {'label_attr': {'class': 'form-label'}}) }}
  {{ form_widget(form.companyName, {'attr': {'class': 'form-control'}}) }}
  {% if form.companyName.vars.errors|length > 0 %}
      <div class="text-danger mt-1">
          {% for error in form.companyName.vars.errors %}
              <p>{{ error.message }}</p>
          {% endfor %}
      </div>
  {% endif %}
</div>

<div class="mb-3">
  {{ form_label(form.address, 'Please enter the address', {'label_attr': {'class': 'form-label'}}) }}
  {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
  {% if form.address.vars.errors|length > 0 %}
      <div class="text-danger mt-1">
          {% for error in form.address.vars.errors %}
              <p>{{ error.message }}</p>
          {% endfor %}
      </div>
  {% endif %}
</div>

<div class="mb-3">
  {{ form_label(form.phone, 'Please enter the address', {'label_attr': {'class': 'form-label'}}) }}
  {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
  {% if form.phone.vars.errors|length > 0 %}
      <div class="text-danger mt-1">
          {% for error in form.phone.vars.errors %}
              <p>{{ error.message }}</p>
          {% endfor %}
      </div>
  {% endif %}
</div>

<div class="mb-3">
  {{ form_label(form.nip, 'Please enter the NIP', {'label_attr': {'class': 'form-label'}}) }}
  {{ form_widget(form.nip, {'attr': {'class': 'form-control'}}) }}
  {% if form.nip.vars.errors|length > 0 %}
      <div class="text-danger mt-1">
          {% for error in form.nip.vars.errors %}
              <p>{{ error.message }}</p>
          {% endfor %}
      </div>
  {% endif %}
</div>


<div class="mb-3">
  <button type="submit" class="btn btn-primary w-100">Save!</button>
</div>

{{ form_end(form) }}


{% endblock %}