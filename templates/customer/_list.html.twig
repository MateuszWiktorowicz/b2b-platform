{% block body %}

<div class="d-flex justify-content-between">
<div>Total customer: {{ customers|length }} </div>
<div>
  <form class="w-100 me-3" role="search">
      <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
    </form>
</div>
<div>
<a class="btn btn-outline-light text-decoration-none" href="{{ path('app_customer_add') }}">Add customer</a>
</div>
</div>
<table class="table table-striped table-hover table-bordered table-sm border-success mt-5 p-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Company</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Nip</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for customer in customers %}
  {% if customers|length > 0 %}
    <tr>
      <th scope="row"> {{ loop.index }} </th>
      <td>{{ customer.email }}</td>
      <td>{{ customer.profile.companyName }}</td>
      <td>{{ customer.profile.address }}</td>
      <td>{{ customer.profile.phone }}</td>
      <td>{{ customer.profile.nip }}</td>
      <td>
           <a class="btn btn-outline-primary me-2" href="{{ path('app_customer_edit', {id: customer.id}) }}"><i class="fas fa-cog"></i> </a>
           <a class="btn btn-outline-secondary me-2" href="{{ path('app_customer_profile', {id: customer.id}) }}"><i class="fas fa-user"></i></a>
          <a class="btn btn-outline-danger" href="{{ path('app_customer_delete', {id: customer.id}) }}"><i class="fas fa-trash"></i><a/> 
      </td>
    </tr>
    {% endif %}
    {% endfor %}
  </tbody>
</table>
{% endblock %}